<Window x:Class="TonNamespace.CommandSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une commande" Height="300" Width="250"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <ListBox x:Name="lstCommands" Height="200" FontSize="16"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnOK" Content="OK" Width="60" Margin="5" Click="btnOK_Click"/>
            <Button x:Name="btnCancel" Content="Annuler" Width="60" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
