<Window x:Class="DynamoRunnerPlugin.ConfigureDynamoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurer un bouton Dynamo"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="10">
        <TextBlock Text="Sélectionnez le bouton (1 à 5) :" />
        <!-- On enlève ici l’attribut SelectionChanged -->
        <ComboBox x:Name="ButtonComboBox"
              Width="60"
              SelectedIndex="0">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
        </ComboBox>

        <TextBlock Text="Chemin du script Dynamo :" Margin="0,10,0,0"/>
        <DockPanel>
            <TextBox x:Name="PathTextBox"
               IsReadOnly="True"
               Width="300"/>
            <Button Content="Parcourir..."
              Margin="5,0,0,0"
              Click="BrowseButton_Click"/>
        </DockPanel>

        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
            <Button Content="OK"
              Width="75"
              Margin="0,0,5,0"
              IsDefault="True"
              Click="OkButton_Click"/>
            <Button Content="Annuler"
              Width="75"
              IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
